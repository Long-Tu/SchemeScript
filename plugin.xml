<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.schemeway.plugins.schemescript"
   name="SchemeScript Plug-in"
   version="0.1.6"
   provider-name="The SchemeWay Project"
   class="org.schemeway.plugins.schemescript.SchemeScriptPlugin">

   <runtime>
      <library name="schemescript.jar">
         <export name="*"/>
      </library>
      <library name="kawa.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
      <import plugin="org.eclipse.debug.core"/>
      <import plugin="org.eclipse.debug.ui"/>
      <import plugin="org.eclipse.ui.console"/>
      <import plugin="org.eclipse.ui.views"/>
   </requires>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Scheme Editor"
            default="true"
            extensions="sch,scm,ss"
            icon="icons/scheme.gif"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="org.schemeway.plugins.schemescript.editor.SchemeEditor"
            id="org.schemeway.plugins.schemescript.editor.SchemeEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            name="Editing Scheme"
            description="Scheme Editor Context"
            id="Scheme Editing"
            parentId="org.eclipse.ui.textEditorScope">
      </context>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <activeKeyConfiguration
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </activeKeyConfiguration>
      <category
            name="Scheme Editing"
            description="Scheme-specific editing commands"
            id="Scheme Editing">
      </category>
      <command
            name="Forward S-expression"
            description="Forward S-expression"
            category="Scheme Editing"
            categoryId="Scheme Editing"
            id="org.schemeway.plugins.schemescript.sexp.forward">
      </command>
      <command
            name="Select Forward S-expression"
            description="Select Forward S-expression"
            category="Scheme Editing"
            categoryId="Scheme Editing"
            id="org.schemeway.plugins.schemescript.sexp.select-forward">
      </command>
      <command
            name="Backward S-expression"
            category="Scheme Editing"
            description="Backward S-expression"
            categoryId="Scheme Editing"
            id="org.schemeway.plugins.schemescript.sexp.backward">
      </command>
      <command
            name="Select Backward S-expression"
            category="Scheme Editing"
            description="Select Backward S-expression"
            categoryId="Scheme Editing"
            id="org.schemeway.plugins.schemescript.sexp.select-backward">
      </command>
      <command
            name="Up S-expression"
            category="Scheme Editing"
            description="Moves to the start of the enclosing S-expression"
            categoryId="Scheme Editing"
            id="org.schemeway.plugins.schemescript.sexp.up">
      </command>
      <command
            name="Select Up S-expression"
            category="Scheme Editing"
            description="Selects the enclosing S-expression"
            categoryId="Scheme Editing"
            id="org.schemeway.plugins.schemescript.sexp.select-up">
      </command>
      <command
            name="Restore the previous selection"
            category="Scheme Editing"
            description="Restores the previous selection"
            categoryId="Scheme Editing"
            id="org.schemeway.plugins.schemescript.sexp.restore-selection">
      </command>
      <command
            name="Down S-expression"
            category="Scheme Editing"
            description="Enters the next S-expression"
            categoryId="Scheme Editing"
            id="org.schemeway.plugins.schemescript.sexp.down">
      </command>
      <command
            name="Swap S-expressions"
            category="Scheme Editing"
            description="Swaps the S-expressions around point"
            categoryId="Scheme Editing"
            id="org.schemeway.plugins.schemescript.sexp.swap">
      </command>
      <command
            name="Format Selection"
            category="Scheme Editing"
            description="Formats the selection"
            categoryId="Scheme Editing"
            id="org.schemeway.plugins.schemescript.sexp.format">
      </command>
      <command
            name="Chapter comment"
            category="Scheme Editing"
            description="Inserts a chapter-style comment"
            categoryId="Scheme Editing"
            id="org.schemeway.plugins.schemescript.comment.chapter">
      </command>
      <command
            name="Section comment"
            category="Scheme Editing"
            description="Inserts a section-style comment"
            categoryId="Scheme Editing"
            id="org.schemeway.plugins.schemescript.comment.section">
      </command>
      <command
            name="Toggle Comment"
            category="Scheme Editing"
            description="Comments/uncomments the selected lines"
            categoryId="Scheme Editing"
            id="org.schemeway.plugins.schemescript.comment.selection">
      </command>
      <command
            name="Scheme file header comment"
            category="Scheme Editing"
            description="Inserts a file header comment"
            categoryId="Scheme Editing"
            id="org.schemeway.plugins.schemescript.comment.header">
      </command>
      <command
            name="Mouse Copy"
            description="Copies the S-expression nears the mouse"
            category="Scheme Editing"
            categoryId="Scheme Editing"
            id="org.schemeway.plugins.schemescript.sexp.mousecopy">
      </command>
      <command
            name="Eval Expression"
            description="Sends the previous S-expression to the interpreter"
            category="Scheme Editing"
            categoryId="Scheme Editing"
            id="org.schemeway.plugins.schemescript.eval.expression">
      </command>
      <command
            name="Eval Toplevel Definition"
            description="Sends the current definition to the interpreter"
            category="Scheme Editing"
            categoryId="Scheme Editing"
            id="org.schemeway.plugins.schemescript.eval.definition">
      </command>
      <command
            name="Compress Spaces"
            description="Replaces all surrounding whitespaces by a single space"
            category="Scheme Editing"
            categoryId="Scheme Editing"
            id="org.schemeway.plugins.schemescript.format.compress">
      </command>
      <command
            name="Jump to Definition"
            description="Jump to symbol definition"
            category="Scheme Editing"
            categoryId="Scheme Editing"
            id="org.schemeway.plugins.schemescript.jump.definition">
      </command>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.sexp.forward"
            contextId="Scheme Editing"
            keySequence="ALT+CTRL+F"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.sexp.select-forward"
            contextId="Scheme Editing"
            keySequence="ALT+CTRL+SHIFT+F"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.sexp.backward"
            contextId="Scheme Editing"
            keySequence="ALT+CTRL+B"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.sexp.select-backward"
            contextId="Scheme Editing"
            keySequence="ALT+CTRL+SHIFT+B"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.sexp.up"
            contextId="Scheme Editing"
            keySequence="ALT+CTRL+U"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.sexp.select-up"
            contextId="Scheme Editing"
            keySequence="ALT+CTRL+SHIFT+U"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.sexp.select-up"
            contextId="Scheme Editing"
            keySequence="CTRL+SHIFT+ARROW_UP"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.sexp.restore-selection"
            contextId="Scheme Editing"
            keySequence="CTRL+SHIFT+ARROW_DOWN"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.sexp.down"
            contextId="Scheme Editing"
            keySequence="ALT+CTRL+ARROW_RIGHT"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.sexp.swap"
            contextId="Scheme Editing"
            keySequence="ALT+CTRL+T"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.sexp.format"
            contextId="Scheme Editing"
            keySequence="CTRL+SHIFT+F"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.sexp.format"
            contextId="Scheme Editing"
            keySequence="CTRL+I"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.sexp.format"
            contextId="Scheme Editing"
            keySequence="TAB"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.comment.chapter"
            contextId="Scheme Editing"
            keySequence="ALT+C C"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.comment.section"
            contextId="Scheme Editing"
            keySequence="ALT+C S"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.comment.selection"
            contextId="Scheme Editing"
            keySequence="CTRL+/"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.comment.header"
            contextId="Scheme Editing"
            keySequence="ALT+C H"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.sexp.mousecopy"
            contextId="Scheme Editing"
            keySequence="ALT+CTRL+C"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.eval.expression"
            contextId="Scheme Editing"
            keySequence="CTRL+CR"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.eval.definition"
            contextId="Scheme Editing"
            keySequence="CTRL+SHIFT+CR"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.format.compress"
            contextId="Scheme Editing"
            keySequence="ALT+CTRL+SPACE"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
      <keyBinding
            commandId="org.schemeway.plugins.schemescript.jump.definition"
            contextId="Scheme Editing"
            keySequence="F12"
            keyConfigurationId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </keyBinding>
   </extension>
   <extension
         id="org.schemeway.plugins.schemescript.preferences"
         name="Scheme"
         point="org.eclipse.ui.preferencePages">
      <page
            name="Scheme"
            class="org.schemeway.plugins.schemescript.preferences.SchemePreferences"
            id="org.schemeway.plugins.schemescript.preferences.scheme">
      </page>
      <page
            name="Comments"
            category="org.schemeway.plugins.schemescript.preferences.scheme"
            class="org.schemeway.plugins.schemescript.preferences.CommentPreferences"
            id="org.schemeway.plugins.schemescript.preferences.comments">
      </page>
      <page
            name="Colors"
            category="org.schemeway.plugins.schemescript.preferences.scheme"
            class="org.schemeway.plugins.schemescript.preferences.ColorPreferences"
            id="org.schemeway.plugins.schemescript.preferences.colors">
      </page>
      <page
            name="Syntax"
            category="org.schemeway.plugins.schemescript.preferences.scheme"
            class="org.schemeway.plugins.schemescript.preferences.SyntaxPreferences"
            id="org.schemeway.plugins.schemescript.preferences.syntax">
      </page>
      <page
            name="Indentation"
            category="org.schemeway.plugins.schemescript.preferences.scheme"
            class="org.schemeway.plugins.schemescript.preferences.IndentationPreferences"
            id="org.schemeway.plugins.schemescript.preferences.indentation">
      </page>
   </extension>

</plugin>
